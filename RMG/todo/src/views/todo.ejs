<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/e03903bfba.js"
      crossorigin="anonymous"
    ></script>
    <title>Todo-List</title>
    <script src="/js/todo.js" defer></script>
    <link rel="stylesheet" href="/css/todo.css" />
  </head>
  <body>
    <div class="todo-container">
      <h1>To Do List</h1>
      <div class="todo-main">
        <form class="todo-form" id="todo-form">
          <input
            class="todo-new-input"
            type="text"
            placeholder="할 일을 입력해주세요"
          />
          <button id="createBtn" class="create-todo" type="submit">
            <i class="fa-solid fa-plus fa-lg"></i>
          </button>
        </form>
      </div>

      <div class="todo-list">
        <% if (items && items.length > 0) { %> <% items.forEach(item => { %>
        <div class="todo-item" data-id="<%= item.id %>">
          <input type="checkbox" class="todo-checkbox" />
          <span class="todo-text"><%= item.description %></span>
          <input
            type="text"
            class="edit-input"
            style="display: none"
            value="<%= item.description %>"
          />
          <div class="button-container">
            <button class="edit" data-id="<%= item.id %>">
              <i class="fa-solid fa-pen fa-lg"></i>
            </button>
            <button class="delete" data-id="<%= item.id %>">
              <i class="fa-solid fa-trash fa-lg"></i>
            </button>
          </div>
        </div>
        <% }); %> <% } %>
      </div>
    </div>
  </body>
</html>
